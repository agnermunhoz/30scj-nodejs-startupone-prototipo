        <div>
        <table class="table data-table">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">Chave </th>
                        <% fluxo.itens.forEach(function(item, index) { %>
                            <th class="text-center" scope="col"><%= item.descricao %></th>
                        <% }) %>    
                    </tr>
                </thead>
                <tbody>
                    <% dados.forEach(function(dado, index) { %>
                        <tr>
                            <td><%= dado._id %></td>
                            <% dado.itens.forEach(function(item, index) { %>
